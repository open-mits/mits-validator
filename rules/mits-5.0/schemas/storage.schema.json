{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mits.org/schemas/mits-5.0/storage.schema.json",
  "title": "MITS 5.0 Storage Specialization Schema",
  "description": "Schema for MITS 5.0 storage item specialization",
  "type": "object",
  "properties": {
    "storage_type": {
      "type": "string",
      "enum": ["CLOSET", "PANTRY", "BASEMENT", "ATTIC", "GARAGE", "SHED", "LOCKER"],
      "description": "Type of storage space"
    },
    "size_type": {
      "type": "string",
      "enum": ["SMALL", "MEDIUM", "LARGE", "EXTRA_LARGE"],
      "description": "Size classification of storage space"
    },
    "availability": {
      "type": "string",
      "enum": ["AVAILABLE", "RESERVED", "UNAVAILABLE"],
      "description": "Current availability status"
    },
    "reservable": {
      "type": "boolean",
      "description": "Whether the storage space can be reserved"
    },
    "unit_of_measure": {
      "type": "string",
      "enum": ["CUBIC_FOOT", "CUBIC_METER", "SQUARE_FOOT", "SQUARE_METER"],
      "description": "Unit of measurement for the storage space"
    },
    "capacity": {
      "type": "object",
      "properties": {
        "volume": {
          "type": "number",
          "minimum": 0
        },
        "weight_limit": {
          "type": "number",
          "minimum": 0
        }
      },
      "description": "Storage capacity information"
    },
    "access_type": {
      "type": "string",
      "enum": ["PRIVATE", "SHARED", "COMMON"],
      "description": "Type of access to the storage space"
    },
    "amenities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["CLIMATE_CONTROLLED", "SECURE", "LOCKED", "VENTILATED", "LIGHTED"]
      },
      "description": "Available amenities for the storage space"
    }
  },
  "required": ["storage_type", "size_type", "availability", "reservable", "access_type"],
  "additionalProperties": false
}
