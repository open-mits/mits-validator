{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MITS Storage Item Specialization",
  "description": "Schema for storage item specialization catalog",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "pattern": "^[A-Z][A-Z0-9_]*$",
      "description": "UPPER_SNAKE_CASE code, must be unique within the file"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Short human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Optional detailed description"
    },
    "storage_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["CLIMATE_CONTROLLED", "STANDARD", "OUTDOOR", "SECURE", "TEMPORARY"]
      },
      "description": "Available storage types"
    },
    "size_categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SMALL", "MEDIUM", "LARGE", "EXTRA_LARGE", "CUSTOM"]
      },
      "description": "Available size categories"
    },
    "access_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SELF_SERVICE", "STAFF_ASSISTED", "APPOINTMENT_ONLY", "KEY_ACCESS"]
      },
      "description": "Available access types"
    },
    "units_of_measure": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["CUBIC_FOOT", "CUBIC_METER", "SQUARE_FOOT", "SQUARE_METER", "UNIT"]
      },
      "description": "Supported units of measure"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional array of alternative names"
    },
    "notes": {
      "type": "string",
      "description": "Optional implementation notes"
    }
  },
  "required": ["code", "name", "storage_types", "size_categories", "access_types", "units_of_measure"],
  "additionalProperties": false
}