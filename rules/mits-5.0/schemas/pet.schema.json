{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MITS Pet Item Specialization",
  "description": "Schema for pet item specialization catalog",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "pattern": "^[A-Z][A-Z0-9_]*$",
      "description": "UPPER_SNAKE_CASE code, must be unique within the file"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Short human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Optional detailed description"
    },
    "pet_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["DOG", "CAT", "BIRD", "FISH", "REPTILE", "SMALL_MAMMAL", "OTHER"]
      },
      "description": "Supported pet types"
    },
    "size_categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SMALL", "MEDIUM", "LARGE", "GIANT", "ALL_SIZES"]
      },
      "description": "Available size categories"
    },
    "service_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["BOARDING", "DAYCARE", "GROOMING", "TRAINING", "VETERINARY", "WALKING"]
      },
      "description": "Available service types"
    },
    "units_of_measure": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["HOUR", "DAY", "WEEK", "MONTH", "SERVICE", "SESSION"]
      },
      "description": "Supported units of measure"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional array of alternative names"
    },
    "notes": {
      "type": "string",
      "description": "Optional implementation notes"
    }
  },
  "required": ["code", "name", "pet_types", "size_categories", "service_types", "units_of_measure"],
  "additionalProperties": false
}