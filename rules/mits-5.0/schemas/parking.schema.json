{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MITS Parking Item Specialization",
  "description": "Schema for parking item specialization catalog",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "pattern": "^[A-Z][A-Z0-9_]*$",
      "description": "UPPER_SNAKE_CASE code, must be unique within the file"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Short human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Optional detailed description"
    },
    "structure_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SURFACE", "GARAGE", "UNDERGROUND", "ROOFTOP", "MIXED"]
      },
      "description": "Available parking structure types"
    },
    "size_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["COMPACT", "STANDARD", "LARGE", "OVERSIZED", "MOTORCYCLE", "ELECTRIC"]
      },
      "description": "Available parking size types"
    },
    "availability": {
      "type": "string",
      "enum": ["AVAILABLE", "RESERVABLE", "BOTH"],
      "description": "Availability type"
    },
    "units_of_measure": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["HOUR", "DAY", "WEEK", "MONTH", "QUARTER", "YEAR"]
      },
      "description": "Supported units of measure"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional array of alternative names"
    },
    "notes": {
      "type": "string",
      "description": "Optional implementation notes"
    }
  },
  "required": ["code", "name", "structure_types", "size_types", "availability", "units_of_measure"],
  "additionalProperties": false
}
