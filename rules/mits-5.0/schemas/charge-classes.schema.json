{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MITS Charge Classes",
  "description": "Schema for MITS charge class catalog",
  "type": "array",
  "items": {
    "$ref": "#/$defs/ChargeClassEntry"
  },
  "$defs": {
    "ChargeClassEntry": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]*$",
          "description": "UPPER_SNAKE_CASE code, must be unique within the file"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Short human-readable name"
        },
        "description": {
          "type": "string",
          "description": "Optional detailed description"
        },
        "aliases": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Optional array of alternative names"
        },
        "notes": {
          "type": "string",
          "description": "Optional implementation notes"
        }
      },
      "required": ["code", "name"],
      "additionalProperties": false
    }
  }
}