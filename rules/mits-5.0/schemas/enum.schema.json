{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mits.org/schemas/mits-5.0/enum.schema.json",
  "title": "MITS 5.0 Enumeration Schema",
  "description": "Schema for MITS 5.0 enumeration catalogs",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string",
        "pattern": "^[A-Z][A-Z0-9_]*$",
        "description": "Unique identifier in UPPER_SNAKE_CASE"
      },
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "Human-friendly display name"
      },
      "description": {
        "type": "string",
        "description": "Optional detailed description"
      },
      "aliases": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Optional alternative names"
      },
      "notes": {
        "type": "string",
        "description": "Optional implementation notes"
      }
    },
    "required": ["code", "name"],
    "additionalProperties": false
  },
  "minItems": 1,
  "uniqueItems": true
}
